<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/dashboard.css">
</head>

<body>
    <div class="wrapper">
        <%- include('navbar') %>

            <div class="form-div">
                <h1 class="page-title">Upload Class to <span>
                        <%= course.course %>
                    </span></h1>

                <form class="upload-class-form" id="videoForm" enctype="multipart/form-data"
                    action="/admin/course/<%= course.course %>" method="post">

                    <div class="form-group">
                        <label for="contentType">Content Type</label>
                        <select name="contentType" id="contentType" class="selecter" required>
                            <option value="">Select Content Type</option>
                            <option value="youtube">YouTube Video</option>
                            <option value="vimeo">Vimeo Video</option>
                            <option value="pdf">PDF Document</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="classUrl">Class URL</label>
                        <input class="category" name="classUrl" type="text" placeholder="Enter the video or file URL"
                            required>
                        <input type="file" name="pdfFile" accept="application/pdf" id="pdfInput" style="display: none;">
                    </div>

                    <button type="submit" class="submit-btn">Upload</button>
                </form>
            </div>

            <section class="uploaded-section">
                <h3>Uploaded Classes</h3>

                <% if (classes.length===0) { %>
                    <p class="no-class">No classes uploaded yet.</p>
                    <% } else { %>
                        <div class="uploaded-class">
                            <% classes.forEach(i=> { %>
                                <div class="class-card">
                                    <div class="class-preview">
                                        <iframe src="<%= i.classUrl %>" frameborder="0" allowfullscreen></iframe>
                                    </div>

                                    <form action="/admin/course/<%= course.course %>/delete/<%= i.classId %>"
                                        method="POST">
                                        <button type="submit" class="delete-btn">Delete</button>
                                    </form>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </section>
    </div>

    <script>
        const contentTypeSelect = document.querySelector('.selecter');
        const urlInput = document.querySelector('.category');
        const pdfInput = document.getElementById('pdfInput');

        contentTypeSelect.addEventListener('change', function () {
            if (this.value === 'pdf') {
                urlInput.style.display = 'none';
                pdfInput.style.display = 'block';
                urlInput.removeAttribute('required');
                pdfInput.setAttribute('required', 'required');
            } else {
                urlInput.style.display = 'block';
                pdfInput.style.display = 'none';
                pdfInput.removeAttribute('required');
                urlInput.setAttribute('required', 'required');
            }
        });
    </script>
</body>

</html>